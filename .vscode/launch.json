  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeArgs": ["--experimental-worker"],
      "request": "launch",
      "name": "Launch Worker",
      "program": "${workspaceFolder}\\worker\\src\\index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "program": "${workspaceFolder}\\api\\server.js",
      "env": { "PORT": "3000" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch bot",
      "program": "${workspaceFolder}\\bot\\src\\start.js",
      "env": { "PORT": "3000"}
    }
  ]
}
