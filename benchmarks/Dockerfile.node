FROM node:18.16.0

WORKDIR /var/app
RUN git clone https://github.com/JoshuaWise/better-sqlite3.git
WORKDIR /var/app/better-sqlite3
RUN npm install

WORKDIR /var/app
COPY package.json package-lock.json ./
RUN npm ci

COPY ./run.sh ./run.sh
RUN chmod +x ./run.sh

COPY ./utils ./utils
COPY ./run.js ./run.js
COPY ./data ./data
COPY ./benchmarks ./benchmarks

CMD ["./run.sh"]
